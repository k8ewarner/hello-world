<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>k8ewarner.myapphw</groupId>
  <artifactId>myapphw</artifactId>
  <version>1</version>
  <packaging>jar</packaging>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <dependencies>
    My dependencies
  </dependencies>
  
  <build>
  <plugins>
    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-jar-plugin</artifactId>
      <version>2.4</version>
      <configuration>
        <skipIfEmpty>true</skipIfEmpty>
        <outputDirectory>lib</outputDirectory>
      </configuration>
      <executions>
        <execution>
          <goals>
            <goal>test-jar</goal>
          </goals>
        </execution>
      </executions>            
    </plugin>
  </plugins>
  </build>
 </project>
